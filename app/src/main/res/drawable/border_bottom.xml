<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="1dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/primary500" />

            <solid android:color="@android:color/transparent" />

            <padding
                android:left="8dp"
                android:right="8dp"
                android:top="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</layer-list>